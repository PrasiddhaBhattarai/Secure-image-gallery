<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Authentication System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <% if (typeof style !== 'undefined') { %>
        <%- style %>
    <% } %>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <h1>Auth System</h1>
            </div>
            <ul class="nav-links" id="navLinks">
                <li><a href="/">Home</a></li>
                <li class="auth-link login-link"><a href="/login">Login</a></li>
                <li class="auth-link register-link"><a href="/register">Register</a></li>
                <li class="user-link dashboard-link"><a href="/dashboard">Dashboard</a></li>
                <li class="user-link password-link"><a href="/change-password">Change Password</a></li>
                <li class="admin-link"><a href="/admin">Admin</a></li>
                <li class="admin-link"><a href="/upload">Upload</a></li>
                <li class="user-link logout-link"><a href="#" id="logoutBtn">Logout</a></li>
            </ul>
            <div class="burger" id="burger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <% if (typeof messages !== 'undefined' && messages.error) { %>
                <div class="alert alert-error">
                    <%= messages.error %>
                </div>
            <% } %>
            <% if (typeof messages !== 'undefined' && messages.success) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            
            <%- body %>
        </div>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Authentication System. All rights reserved.</p>
    </footer>

    <script src="/js/main.js"></script>
    <% if (typeof customJS !== 'undefined') { %>
        <script src="/js/<%= customJS %>.js"></script>
    <% } %>
    <% if (typeof script !== 'undefined') { %>
        <%- script %>
    <% } %>
</body>
</html> 